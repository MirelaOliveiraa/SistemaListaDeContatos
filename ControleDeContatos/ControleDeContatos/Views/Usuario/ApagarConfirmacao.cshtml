@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação  apagar usuário";
}
<div class=" text-center">

    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>
<div class="text-center">

<a class=" btn-primary btn" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class=" btn-danger btn" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id" > Confirmar exclusão</a>
</div>